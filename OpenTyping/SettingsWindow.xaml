<controls:MetroWindow x:Name="SelfWindow"
                      x:Class="OpenTyping.SettingsWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      mc:Ignorable="d"
                      Title="설정" 
                      Width="500" 
                      Height="450"
                      ResizeMode="CanMinimize"
                      Icon="{StaticResource AppIcon}">
    <controls:MetroWindow.Resources>
        <Style x:Key="SettingNameTextBlock" 
               TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource NanumBarunGothic}"/>
            <Setter Property="FontSize" Value="15pt"/>
            <Setter Property="Margin" Value="0 15 0 10"/>
        </Style>
    </controls:MetroWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" 
                    Margin="10 5 10 5">
            <StackPanel Orientation="Horizontal">
                <Rectangle Width="45" 
                           Height="45"
                           VerticalAlignment="Center">
                    <Rectangle.Fill>
                        <VisualBrush Visual="{iconPacks:Modern Cog}"/>
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock Style="{StaticResource NormalTextBlock}"
                           FontSize="30pt"
                           Margin="5 10 0 5"
                           VerticalAlignment="Center"
                           Text="설정"/>
            </StackPanel>

            <TabControl Margin="0 3 0 0">
                <TabItem>
                    <TabItem.Header>
                        <Label Style="{StaticResource TabItemLabel}">
                            연습 자판
                        </Label>
                    </TabItem.Header>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Style="{StaticResource SettingNameTextBlock}">
                            현재 자판
                        </TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="KeyLayoutsCombo"
                                      DataContext="{Binding ElementName=SelfWindow}"
                                      Width="200" 
                                      Margin="0 0 5 0"
                                      FontFamily="{StaticResource NanumGothic}"
                                      FontSize="11pt"
                                      HorizontalAlignment="Left"
                                      SelectedItem="{Binding SelectedKeyLayout, Mode=TwoWay}"
                                      ItemsSource="{Binding KeyLayouts}"
                                      DisplayMemberPath="Name"/>
                            <Button x:Name="AddKeyLayoutButton"
                                    Background="LightGreen"
                                    BorderThickness="0"
                                    Margin="0 0 5 0"
                                    Click="AddKeyLayoutButton_Click">
                                <Rectangle Width="12" 
                                           Height="12" 
                                           Fill="Green">   
                                    <Rectangle.OpacityMask>
                                        <VisualBrush Visual="{iconPacks:Modern add}"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Button>
                            <Button x:Name="RemoveKeyLayoutButton"
                                    Click="RemoveKeyLayoutButton_Click"
                                    Background="LightPink"
                                    BorderThickness="0">
                                <Rectangle Width="13" 
                                           Height="15"
                                           Fill="Black">
                                    <Rectangle.OpacityMask>
                                        <VisualBrush Visual="{iconPacks:FontAwesome TrashAltRegular}"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Button>
                        </StackPanel>

                        <TextBlock Style="{StaticResource SettingNameTextBlock}">
                            자판 데이터 경로
                        </TextBlock>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="KeyLayoutDataDirTxt"
                                     DataContext="{Binding ElementName=SelfWindow}"
                                     Grid.Column="0"
                                     Text="{Binding Path=KeyLayoutDataDir, 
                                                    Mode=OneWay}"
                                     IsReadOnly="True"
                                     Margin="0 0 5 0"/>
                            <Button x:Name="KeyLayoutDataDirButton" 
                                    Grid.Column="1" 
                                    Click="KeyLayoutDataDirButton_OnClick">
                                <Rectangle Width="12"
                                           Height="12">
                                    <Rectangle.Fill>
                                        <VisualBrush Visual="{iconPacks:Modern folder}"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Button>
                        </Grid>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </StackPanel>

        <StackPanel Grid.Row="1" 
                    Style="{StaticResource ControlButtonStackPanel}">
            <Button x:Name="OkButton"
                    Click="OkButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="18"
                               Height="15" 
                               Fill="Green">
                        <Rectangle.OpacityMask>
                            <VisualBrush Visual="{iconPacks:Modern check}"/>
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Style="{StaticResource ControlButtonText}"
                               Text="확인"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</controls:MetroWindow>