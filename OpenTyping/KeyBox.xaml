<UserControl x:Name="KeyBoxContainer"
             x:Class="OpenTyping.KeyBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" 
             d:DesignWidth="50">
    <Canvas>
        <Border x:Name="KeyBack"
                Panel.ZIndex="1"
                CornerRadius="5"
                Background="{Binding ShadowColor}"
                BorderBrush="Black"
                BorderThickness="2"
                Width="{Binding ActualWidth, ElementName=KeyBoxContainer}"
                Height="50">
        </Border>
        <Border x:Name="KeyTop"
                Panel.ZIndex="2"
                CornerRadius="5"
                Background="{Binding KeyColor}"
                VerticalAlignment="Top"
                BorderBrush="Black"
                BorderThickness="2 2 2 1"
                Width="{Binding ActualWidth, ElementName=KeyBoxContainer}"
                Height="43">
            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Center">
                <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                    <TextBlock Text="{Binding Key.ShiftKeyData}"
                               Style="{StaticResource NormalTextBlock}"
                               FontSize="11pt"/>
                </Viewbox>
                <Viewbox StretchDirection="DownOnly" Stretch="Uniform">
                    <TextBlock Text="{Binding Key.KeyData}"
                               Style="{StaticResource NormalTextBlock}"
                               FontSize="11pt"/>
                </Viewbox>
            </StackPanel>
        </Border>
    </Canvas>
</UserControl>
